@page "/signin"
@inject NavigationManager Navigation

<PageTitle>Sign In</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <h2>Sign In</h2>
        <p>Enter your credentials to access your grimoire</p>

        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <InputText id="email" class="form-control" @bind-Value="loginModel.Email"
                    placeholder="name@example.com" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <InputText type="password" id="password" class="form-control" @bind-Value="loginModel.Password"
                    placeholder="Password" />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary-custom">Sign In</button>
            </div>
        </EditForm>

        <div class="mt-3 text-center">
            <a href="login" class="text-decoration-none">Back to options</a>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();

    private void HandleLogin()
    {
        // TODO: Implement actual login logic
        Console.WriteLine($"Login attempt for {loginModel.Email}");
        Navigation.NavigateTo("/");
    }

    public class LoginModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
    }
}