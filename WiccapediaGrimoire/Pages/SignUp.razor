@page "/signup"
@inject NavigationManager Navigation

<PageTitle>Sign Up</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <h2>Sign Up</h2>
        <p>Create your account to start your journey</p>

        <EditForm Model="@signUpModel" OnValidSubmit="HandleSignUp">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <InputText id="email" class="form-control" @bind-Value="signUpModel.Email"
                    placeholder="name@example.com" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <InputText type="password" id="password" class="form-control" @bind-Value="signUpModel.Password"
                    placeholder="Password" />
            </div>
            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <InputText type="password" id="confirmPassword" class="form-control"
                    @bind-Value="signUpModel.ConfirmPassword" placeholder="Confirm Password" />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary-custom">Sign Up</button>
            </div>
        </EditForm>

        <div class="mt-3 text-center">
            <p class="mb-0">Already have an account? <a href="signin" class="text-decoration-none">Sign In</a></p>
            <a href="login" class="text-decoration-none small mt-2 d-block">Back to options</a>
        </div>
    </div>
</div>

@code {
    private SignUpModel signUpModel = new();

    private void HandleSignUp()
    {
        // TODO: Implement actual sign up logic
        Console.WriteLine($"Sign up attempt for {signUpModel.Email}");
        Navigation.NavigateTo("/");
    }

    public class SignUpModel
    {
        public string Email { get; set; } = "";
        public string Password { get; set; } = "";
        public string ConfirmPassword { get; set; } = "";
    }
}