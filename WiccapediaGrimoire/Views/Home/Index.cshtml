@{
    ViewData["Title"] = "Welcome";
}

<section class="py-5">
    <div class="container">
        <div class="row align-items-center gy-4">
            <div class="col-12 col-lg-7">
                <div class="surface">
                    <h1 class="display-4 mb-3">Wiccapedia Grimoire</h1>
                    <p class="lead mb-4">A modern, mystical grimoire. Crafted with a dark, elegant palette to let your
                        content shine.</p>
                    <div class="d-flex gap-3">
                        <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Privacy">Explore Privacy</a>
                        <a class="btn btn-outline-primary btn-lg" href="https://learn.microsoft.com/aspnet/core"
                            target="_blank" rel="noopener">ASP.NET Core Docs</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-5">
                <div class="palette">
                    <div class="swatch">
                        <div class="swatch-color" style="background:#1A1A1A"></div>
                        <div class="swatch-label">Background — #1A1A1A</div>
                    </div>
                    <div class="swatch">
                        <div class="swatch-color" style="background:#EBD6F5"></div>
                        <div class="swatch-label">Primary — #EBD6F5</div>
                    </div>
                    <div class="swatch">
                        <div class="swatch-color" style="background:#AD5CD6"></div>
                        <div class="swatch-label">Secondary — #AD5CD6</div>
                    </div>
                    <div class="swatch">
                        <div class="swatch-color" style="background:#5C1F7A"></div>
                        <div class="swatch-label">Tertiary — #5C1F7A</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>